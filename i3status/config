# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

# This is really the GPU temperature
order += "cpu_temperature 0"
order += "path_exists MANHEIM"
order += "path_exists PIA"
order += "volume master"
order += "disk /"
order += "disk /home"
order += "ethernet _first_"
order += "tztime local"

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        format = "%a %b %_d %Y %l:%M:%S"
}

disk "/" {
        format = "root (%avail free)"
}

disk "/home" {
  format = "home (%avail free)"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

path_exists PIA {
# path exists when a VPN tunnel launched by nmcli/nm-applet is active
  path = "/proc/sys/net/ipv4/conf/tun1"
}

path_exists MANHEIM {
# path exists when a VPN tunnel launched by nmcli/nm-applet is active
  path = "/proc/sys/net/ipv4/conf/tun0"
}

# really GPU temperature
cpu_temperature 0 {
        format = "GPU %degrees°C"
        path = "/sys/class/drm/card0/device/hwmon/hwmon0/temp1_input"
}
