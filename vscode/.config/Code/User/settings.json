{
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "languageServerHaskell.hieExecutablePath": "/home/drew/.local/bin/hie",
    "editor.fontSize": 17,
    "vim.hlsearch": true,
    "editor.fontFamily": "Source Code Pro Medium",
    "vim.leader": "<space>",
    "vim.surround": true,
    "vim.handleKeys": {
        "<C-w>": false
    },
    "editor.renderLineHighlight": "none",
    "brittany.stackEnable": true,
    "files.associations": {
      "*.hs": "haskell"
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<Leader>", "f", "s"],
            "commands": [":w"]
          },
          {
            "before": ["<C-j>"],
            "after": ["<C-w>", "j"]
          },
          {
            "before": ["<C-k>"],
            "after": ["<C-w>", "k"]
          },
          {
            "before": ["<C-h>"],
            "after": ["<C-w>", "h"]
          },
          {
            "before": ["<C-l>"],
            "after": ["<C-w>", "l"]
          }
    ],
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": true,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "editor.renderIndentGuides": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 3000,
    "[haskell]": {
      "editor.defaultFormatter": "MaxGabriel.brittany"
    },
    "workbench.colorTheme": "Jellybeams"
}
